@model List<ReviewViewModel>
<div class="row">
    @foreach (var review in Model) {
        <div class="col-md-12">
            <div class="card mb-2">
                <div class="card-body">
                    <h5 class="card-title text-center">@review.UserFirstName</h5>
                    <p class="card-text" style="font-size:14px">@review.Review</p>
                </div>
            </div>
        </div>
    }
</div>